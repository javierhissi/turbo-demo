{
  "extends": "tsconfig/server.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@repos/*": ["src/repos/*"],
      "@models/*": ["src/models/*"],
      "@shared/*": ["src/shared/*"],
      "@server": ["src/server"],
      "@services/*": ["src/services/*"],
      "@routes/*": ["src/routes/*"]
    }
  },
  "include": [".", ".eslintrc.js"],
  "exclude": ["dist", "build", "node_modules"]
}
